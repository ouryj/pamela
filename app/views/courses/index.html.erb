<h1><strong>Available Courses:</strong></h1>

<%= link_to 'Create a New Course', new_course_path %>

<div>
<% @courses.each do |course| %>
<p>
<strong>Course Name:</strong> <%= course.name %> <br>
<strong>Course Hours:</strong> <%= course.totalInClassHours %> <br>
<%= link_to "Course Info", course_path(course) %>
<%= link_to 'Edit Course', edit_course_path(course) %>
<%= link_to 'Delete Course', course_path(course), method: :delete %>
</p>
<hr>
<%end%>
</div>

